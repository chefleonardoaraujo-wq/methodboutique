    <button id="globalAudioBtn" class="audio-fab paused" onclick="toggleGlobalAudio()" aria-label="Listen to page">
        <div class="audio-wave">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
        </div>
        <span id="audioLabel" class="text-[10px] uppercase tracking-widest text-gold-400 font-bold">Listen</span>
    </button>

    <script>
        const audioBtn = document.getElementById('globalAudioBtn');
        const audioLabel = document.getElementById('audioLabel');
        let synth = window.speechSynthesis;
        let utterance = new SpeechSynthesisUtterance();
        let isRunning = false;

        function getContent() {
            return "The Collection. Proprietary Tools. Access Boutique Method's intellectual capital. Available products: Standard Operating Procedures, Culture Code Manual, Vesting Agreement, Advisory Board Setup, Bulletproof NDA, and Crisis Management Kit. Acquire tools to professionalize your business.";
        }

        function toggleGlobalAudio() {
            if (synth.speaking && isRunning) {
                synth.cancel();
                isRunning = false;
                audioBtn.classList.add('paused');
                audioLabel.innerText = "Listen";
            } else {
                synth.cancel();
                utterance.text = getContent();
                utterance.lang = 'en-US';
                utterance.rate = 1;
                synth.speak(utterance);
                isRunning = true;
                audioBtn.classList.remove('paused');
                audioLabel.innerText = "Stop";
            }
        }

        utterance.onend = function() {
            isRunning = false;
            audioBtn.classList.add('paused');
            audioLabel.innerText = "Listen";
        };
    </script>

