    <script>
        // Modal Logic
        document.querySelectorAll('dialog').forEach(d => {
            d.addEventListener('click', e => {
                const rect = d.getBoundingClientRect();
                if (e.clientX < rect.left || e.clientX > rect.right || 
                    e.clientY < rect.top || e.clientY > rect.bottom) {
                    d.close();
                }
            });
        });

        // Audio Logic (English)
        let synth = window.speechSynthesis;
        let utterance = new SpeechSynthesisUtterance();
        
        let textoParaLer = `
            From Chaos to Legacy.
            We live in the era of noise. Everyone speaks, but few build something that lasts.
            We believe that an expert's knowledge should not die with them.
            Boutique Method IP Holding exists to transform tacit knowledge into proprietary assets.
            
            Boutique Method was born in Santa Maria, Rio Grande do Sul.
            Our work is to capture business intelligence and transform it into a replicable Operating System.
            We are architects of legacy.
            
            Holding Dogmas:
            One: Auctoritas. True Authority.
            Two: Claritas. Radical Clarity.
            Three: Perpetuitas. Legacy and Equity.
        `;

        utterance.text = textoParaLer;
        utterance.lang = 'en-US'; // Set to English
        utterance.rate = 0.9;
        utterance.pitch = 0.8;

        let isPlaying = false;

        function lerManifesto() {
            const btn = document.getElementById('btnAudio');
            const iconPlay = document.getElementById('iconPlay');
            const iconPause = document.getElementById('iconPause');
            const textLabel = document.getElementById('textAudio');
            const ping = document.getElementById('pingAudio');

            if (synth.speaking && isPlaying) {
                synth.cancel();
                isPlaying = false;
                iconPlay.classList.remove('hidden');
                iconPause.classList.add('hidden');
                ping.classList.add('hidden');
                textLabel.innerText = "Listen to Manifesto";
                textLabel.classList.remove('text-gold-400');
            } else {
                synth.cancel();
                synth.speak(utterance);
                isPlaying = true;
                iconPlay.classList.add('hidden');
                iconPause.classList.remove('hidden');
                ping.classList.remove('hidden');
                textLabel.innerText = "Playing...";
                textLabel.classList.add('text-gold-400');
            }

            utterance.onend = function() {
                isPlaying = false;
                iconPlay.classList.remove('hidden');
                iconPause.classList.add('hidden');
                ping.classList.add('hidden');
                textLabel.innerText = "Listen to Manifesto";
                textLabel.classList.remove('text-gold-400');
            };
        }
    </script>

